            const url='/api/internal/tote_unknown_location_watchdog:enable';
            Http.open("POST", url);
            Http.send();
        }
        function DisableToteLocationUnknownTimeout() {
            const Http = new XMLHttpRequest();
            const url='/api/internal/tote_unknown_location_watchdog:disable';
            Http.open("POST", url);
            Http.send();
        }
        function ExecuteToteLocationUnknownTimeout() {
            const Http = new XMLHttpRequest();
            const url='/api/internal/tote_unknown_location_watchdog:execute';
